{
  "manifest_version": 2,
  "name": "Howl.me Redirector",
  "version": "1.0",
  "description": "Intercepts and redirects howl.me URLs",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_title": "Howl.me Redirector"
  }
}
